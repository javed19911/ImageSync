<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/custom_headder_bg">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/underline_bg"
        android:orientation="horizontal">
        <!--//#p take from here -->
        <Button
            android:textColor="@color/colorPrimaryDark"
            android:background="@color/transparent"
            android:id="@+id/add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:layout_gravity="center_vertical"
            android:textSize="23sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Title"
            android:id="@+id/title"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/divertlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Divert Title"
                android:gravity="right"
                android:id="@+id/divertTxt"
                android:padding="3dp"
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12sp"
                android:textStyle="bold"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/divert"
                android:text=""
                android:visibility="visible"
                android:layout_gravity="center_vertical"
                android:buttonTint="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:id="@+id/list" />




    <EditText
        android:id="@+id/divertRemark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:visibility="gone"
        android:textSize="14sp"
        android:ems="15" />





</LinearLayout>